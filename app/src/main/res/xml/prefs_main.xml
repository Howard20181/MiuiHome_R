<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="最近任务">

        <DropDownPreference
            android:defaultValue="0"
            android:key="prefs_key_recent_blur"
            android:title="模糊级别"
            app:entries="@array/recent_blur"
            app:entryValues="@array/recent_blur_value" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_disable_darken"
            android:title="取消壁纸压暗" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_hide_status"
            android:title="后台界面隐藏状态栏" />

        <SeekBarPreference
            android:defaultValue="40"
            android:key="prefs_key_task_view_header_height"
            android:title="应用名称距卡片"
            app:format="%d dp"
            app:maxValue="150"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="20"
            android:key="prefs_key_task_view_corners"
            android:title="卡片圆角大小"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="150"
            android:key="prefs_key_home_anim_ratio"
            android:title="动画速度"
            app:format="%d / 100 f"
            app:maxValue="500"
            app:minValue="10"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="小部件">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_widget_hide"
            android:title="隐藏小部件标题" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_widget_to_minus"
            android:title="允许将安卓小部件移到负一屏" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_widget_miui"
            android:title="在安卓小部件显示 MIUI 小部件" />
    </PreferenceCategory>

    <PreferenceCategory android:title="文件夹">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_small_folder_blur"
            android:title="小文件夹模糊" />

        <SeekBarPreference
            android:defaultValue="50"
            android:key="prefs_key_small_folder_corner"
            android:title="小文件夹模糊圆角半径"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="300"
            android:key="prefs_key_small_folder_side"
            android:title="小文件夹模糊背景大小"
            app:format="%d dp"
            app:maxValue="500"
            app:showSeekBarValue="true" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="prefs_key_home_folder_blur"
            android:title="文件夹展开背景模糊" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_folder_auto_close"
            android:title="打开应用时关闭文件夹" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_folder_width"
            android:title="利用整个文件夹宽度" />

        <SeekBarPreference
            android:defaultValue="3"
            android:key="prefs_key_home_folder_columns"
            android:title="文件夹排列数"
            app:maxValue="6"
            app:minValue="1"
            app:format="%d 个"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="底栏设置">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_dock_blur"
            android:title="启用底栏" />

        <SeekBarPreference
            android:defaultValue="100"
            android:key="prefs_key_home_dock_height"
            android:title="底栏高度"
            app:format="%d dp"
            app:maxValue="200"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="10"
            android:key="prefs_key_home_dock_margin"
            android:title="底栏两侧边距"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="30"
            android:key="prefs_key_home_dock_top_margin"
            android:title="底栏上边距"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="20"
            android:key="prefs_key_home_dock_bottom_margin"
            android:title="底栏下边距"
            app:format="%d dp"
            app:maxValue="100"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="25"
            android:key="prefs_key_home_dock_corner"
            android:title="底栏圆角半径"
            app:format="%d dp"
            app:maxValue="50"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="其他">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_show_status_clock"
            android:title="时钟常显" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_double_sleep"
            android:title="双击锁屏" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_unlock_grids"
            android:title="解锁桌面布局" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_home_blur_wallpaper"
            android:title="始终模糊壁纸" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_pad_dock_blur"
            android:title="平板安卓 12 底栏模糊" />

        <SeekBarPreference
            android:defaultValue="100"
            android:key="prefs_key_home_blur_radius"
            android:title="模糊半径"
            app:format="%d f"
            app:maxValue="500"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

</PreferenceScreen>