<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="文件夹">

        <SwitchPreference
            android:title="小文件夹模糊"
            android:defaultValue="false" />

        <SeekBarPreference
            android:title="小文件夹模糊圆角半径"
            android:defaultValue="50"
            android:max="100"
            app:showSeekBarValue="true"/>

        <SeekBarPreference
            android:title="小文件夹模糊大小"
            android:defaultValue="160"
            android:max="200"
            app:showSeekBarValue="true"/>

        <SwitchPreference
            android:key="prefs_key_home_folder_auto_close"
            android:title="打开应用时关闭文件夹"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="prefs_key_home_folder_width"
            android:title="利用整个文件夹宽度"
            android:defaultValue="false" />

        <SeekBarPreference
            android:key="prefs_key_home_folder_cols"
            android:title="文件夹排列数"
            android:defaultValue="3"
            android:max="6"
            app:showSeekBarValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="其他">

        <DropDownPreference
            android:title="后台模糊级别"
            app:entries="@array/folder_shade"
            app:entryValues="@array/folder_shade_value"
            android:defaultValue="3" />

    </PreferenceCategory>
</PreferenceScreen>